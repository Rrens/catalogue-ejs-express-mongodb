<body id="body">
    <section class="signin-page account">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="block text-center">
                        <a class="logo" href="/">
                            <img src="images/logo.png" alt="">
                        </a>
                        <h2 class="text-center">Forgot Password</h2>
                        <form id="forgotPasswordForm" class="text-left clearfix">
                            <div class="form-group">
                                <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-main text-center">Submit</button>
                            </div>
                        </form>
                        <p class="mt-20">Remember your password? <a href="/login">Login</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main jQuery -->
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.1 -->
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- Additional JavaScript Plugins -->
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/bootstrap-touchspin/dist/jquery.bootstrap-touchspin.min.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/instafeed/instafeed.min.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/ekko-lightbox/dist/ekko-lightbox.min.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/syo-timer/build/jquery.syotimer.min.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/slick/slick.min.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/slick/slick-animation.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCC72vZw-6tGqFyRhhg5CkF2fqfILn2Tsw"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/plugins/google-map/gmap.js"></script>
    <script src="https://demo.themefisher.com/aviato-bootstrap/js/script.js"></script>

    <!-- Custom JavaScript for handling form submission -->
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async (event) => {
            event.preventDefault();
            const email = document.getElementById('email').value;
            
            try {
                const response = await fetch('/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email }),
                });
                
                const result = await response.json();
                
                if (response.ok) {
                    alert(result.msg);
                    // Redirect ke halaman reset password dengan token
                    window.location.href = `/reset/${result.token}`;
                } else {
                    alert(result.msg);
                }
            } catch (err) {
                console.error('Error:', err);
                alert('Something went wrong');
            }
        });
    </script>
</body>
